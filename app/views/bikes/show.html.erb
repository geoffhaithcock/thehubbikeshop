<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="well">
        <% if @bike.avatar.exists? != nil %>
        <%= image_tag @bike.avatar.url(:medium), class:"img-responsive" %>
        <% end %>
        <h2><strong><%= @bike.name.titleize %></strong><br />$<%= @bike.price %>
        </h2>  
        <p><%= @bike.description.titleize %>
        </p>
        <% if current_user.id == @bike.user.id %>
          <h4><%= link_to edit_bike_path(@bike) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
              <%= link_to @bike, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
          </h4>
      <% end %>
    </div>  
  </div>    
</div> 

<div class="row">
  <div class="col-md-12">
    <div class="well">
        <% @bike.reviews.each do |review| %>
        <div class="well">
          <h3><%= link_to review.title, review %></h3>  
          <p><%= review.user.username %> said:
          </p>
          <p><%= review.review_entry[0..80] %>...[<%= link_to"More", review %>]
          </p>
          <p><% "#{review.rating}".to_i.times do %>
            <span class="glyphicon glyphicon-star"></span>
          <% end %>
          </p>
          <p><span class="posted-at"><%= review.created_at.strftime('%m/%d/%Y %I:%m:%p') %></span>
          </p>
          <p>
          <% if current_user.id == review.user.id %>
            <h4><%= link_to edit_review_path(review) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                <%= link_to review, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
            </h4>
          <% end %>
          </p>
        </div>
      </div> 
      <% end %>
    </div>   
  </div>    
</div> 
<div class="row">
  <div class="col-md-12">
    <div class="well">
     <h3> Leave a Review </h3>
        <%= render 'reviews/form' %>
    </div>
  </div>  
</div>



