<div class="row">  
  <% current_user.reviews.each do |review| %>
    <div class="col-md-12">
      <div class="panel panel-inverse">
        <div class="panel-heading">
          <h3><%= link_to review.bike.name.titleize, review.bike %>...<%= link_to review.title.titleize, review %></h3>
            <div class="well">
              <h4><%= review.user.username %></h4>
              <p><%= review.review_entry.titleize %></p>
              <p><% "#{review.rating}".to_i.times do %>
              <span class="glyphicon glyphicon-star"></span>
                <% end %></p>
              <p><span class="posted-at"><%= review.created_at.strftime('%m/%d/%Y %I:%M:%p') %></span></p>
              <h4><%= link_to edit_review_path(review) do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to review, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                <% end %></h4>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>